<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  
  <system.serviceModel>
    <bindings> 
      <basicHttpBinding>
        <binding name="httpBasicBindingServiceConfig"/> 
      </basicHttpBinding>
      <wsHttpBinding>
        <binding name ="wsHttpBindingServiceConfig"/>        
      </wsHttpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior name="behaviorConfig">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service name="BrokerInterface.BrokerServices" behaviorConfiguration="behaviorConfig">
        <endpoint address="http://localhost:8080/BrokerClientService" binding="basicHttpBinding" bindingConfiguration="httpBasicBindingServiceConfig"
                  name="Broker_Client_Endpoint" contract="BrokerClientContract.IBrokerClientService">
                  <identity>
                    <dns value="localhost"/>
                  </identity>
        </endpoint>

        <endpoint address="http://localhost:8080/BrokerStandService" binding="wsHttpBinding" bindingConfiguration="wsHttpBindingServiceConfig"
                  name="Broker_Stand_Endpoint" contract="BrokerStandContract.IBrokerStandService">
          <identity>
            <dns value="localhost"/>
          </identity>
        </endpoint>
        <endpoint address ="mex" binding="mexHttpBinding" contract ="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080/BrokerClientService"/>
          </baseAddresses>
        </host>
        
      </service>
    </services>
  </system.serviceModel>
  
  
  
</configuration>
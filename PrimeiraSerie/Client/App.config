<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.runtime.remoting>
    <application>
      <channels>
        <channel ref="tcp" port ="0">
          <clientProviders>
            <formatter ref="binary" typeFilterLevel="Full"/>
          </clientProviders>
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full"/>
          </serverProviders>
        </channel>  
      </channels>
      <client>
        <wellknown type ="BrokerSAO.IBrokerSAO, BrokerSAO"
                   url="tcp://localhost:1234/JobBroker"/>
      </client>
    </application>
  </system.runtime.remoting>
</configuration>
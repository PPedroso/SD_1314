<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <system.runtime.remoting>
      <application>
        <channels>
          <channel ref="tcp" port ="1234">
            <clientProviders>
              <formatter ref="binary" typeFilterLevel="Full"/>
            </clientProviders>
            <serverProviders>
              <formatter ref="binary" typeFilterLevel="Full"/>
            </serverProviders>
          </channel>  
        </channels>
        <service>
          <wellknown type ="Broker.MyBrokerObject, Broker"
                     mode="Singleton"
                     objectUri="JobBroker"/>
        </service>
       </application>
    </system.runtime.remoting>

  <appSettings>
    <add key ="baseWorkerPort" value ="2000"/>
  </appSettings>
</configuration>